<icegrid>
    <application name="Simple">
        <server-template id="SimpleServer">
            <parameter name="index"/>
            <server id="SimpleServer-${index}" exe="java" activation="on-demand">

                <option>-jar</option>
                <option>../Worker/build/libs/worker.jar</option>
                <adapter name="Solver" endpoints="tcp -h localhost">
                    <object identity="ClaimMatrix-${index}" type="::Sudoku::SolverI" property="Identity"/>
                </adapter>

            </server>
        </server-template>

        <node name="node1">
            <server-instance template="SimpleServer" index="1"/>
            <server-instance template="SimpleServer" index="2"/>
            <server-instance template="SimpleServer" index="3"/>
        </node>

    </application>
</icegrid>